                            </th>
                          </tr>
                        </thead>

                        <tbody>
                        <!-- even/odd pointer is determind to highlight even row(lighter than odd row) => for beauty -->
                        <c:forEach items="${categories}" var="category" varStatus="loop">
                        	<c:choose>
                        		<c:when test="${loop.index % 2 == 0}">
                        			 <tr class="even pointer">
                        		</c:when>
                        		<c:otherwise>
                        		 	<tr class="odd pointer">
                        		</c:otherwise>
                        	</c:choose>
                            <td class=" ">${loop.index + 1}</td>
                            <td class=" ">${category.id }</td>
                            <td class=" ">${category.code } </td>
                            <td class=" ">${category.name }</td>
                            <td class=" ">${category.description }</td>
                            <td class="text-center"><a href="<c:url value="/category/view/${category.id}"/>" class="btn btn-round btn-default" href="#">View</a>
                            <td class="text-center"><a href="<c:url value="/category/edit/${category.id}"/>" class="btn btn-round btn-primary" href="#">Edit</a>
                            <td class="text-center"><a onclick="confirmDelete(${category.id});" class="btn btn-round btn-danger" href="#">Delete</a>
                            </td>
                         </c:forEach>
                          
                        </tbody>
                      </table>
